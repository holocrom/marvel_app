<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="character"
            type="com.example.presentation.domain.CharacterModelVo"
            />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        tools:context=".ui.fragments.DetailCharacterFragment"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/fragment_character_details_avatar"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:contentDescription="@string/character_avatar"
                android:scaleType="centerCrop"
                avatar="@{character.imageURL}"
                tools:src="@drawable/im"
                android:layout_margin="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/roundedImageView"
                android:outlineSpotShadowColor="@color/black"
                />

            <ImageView
                android:id="@+id/favoriteStar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="8dp"
                favIcon="@{character.favorite}"
                app:layout_constraintTop_toBottomOf="@id/fragment_character_details_avatar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:id="@+id/fragment_character_details_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@{character.name}"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/MediumTextBlack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/favoriteStar" />
            <ImageView
                android:id="@+id/description_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="contentDescription"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_baseline_description_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_character_details_name"
                />
            <TextView
                android:id="@+id/description_tittle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/description_img_detail_fragment"
                app:layout_constraintBottom_toBottomOf="@id/description_icon"
                app:layout_constraintStart_toEndOf="@id/description_icon"
                app:layout_constraintTop_toTopOf="@id/description_icon"
                style="@style/nameText"
                />
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="@{character.description}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description_tittle"
                style="@style/nameText"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>